<!DOCTYPE html>
<html>
<head>
  <title>Category Master</title>
</head>
<body>
  <h1>Category Master</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
        <tr>
          <td><%= category.categoryId %></td>
          <td><%= category.categoryName %></td>
          <td>
            <a href="/categories/<%= category.categoryId %>">Edit</a>
            <form action="/categories/<%= category.categoryId %>" method="POST" style="display: inline;">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit">Delete</button>
            </form>
          </td>
          <td>
            <a href="/categories/<%= category.categoryId %>/products">View Products</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
